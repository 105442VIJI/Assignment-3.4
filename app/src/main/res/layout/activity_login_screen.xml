<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/LightSeaGreen"
    tools:context=".loginScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/Welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/loginScreen_Email"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/DarkGray"
        android:background="@color/White"
        android:layout_marginTop="150dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/loginScreen_Password"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColorHint="@color/DarkGray"
        android:layout_below="@id/loginScreen_Email"
        android:background="@color/White"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/loginScreen_Button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loginScreen_Password"
        android:layout_marginTop="60dp"
        android:text="Login"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/loginScreen_signUp"
        android:layout_below="@+id/loginScreen_Button"
        android:text="Not a Member? Sign Up now."
        android:textColor="@color/White"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:clickable="true"
        />

</RelativeLayout>
